{
  "name": "@feyond/chrome-messaging",
  "version": "0.0.1",
  "description": "Chrome Extension Messaging Wrapper Library",
  "main": "lib/client/index.umd.js",
  "module": "lib/client/index.es.js",
  "types": "lib/client/index.d.ts",
  "type": "module",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "exports": {
    "./core": {
      "types": "./lib/core/index.d.ts",
      "import": "./lib/core/index.es.js",
      "require": "./lib/core/index.umd.js"
    },
    "./client": {
      "types": "./lib/client/index.d.ts",
      "import": "./lib/client/index.es.js",
      "require": "./lib/client/index.umd.js"
    },
    "./background": {
      "types": "./lib/background/index.d.ts",
      "import": "./lib/background/index.es.js",
      "require": "./lib/background/index.umd.js"
    },
    "./content": {
      "types": "./lib/content/index.d.ts",
      "import": "./lib/content/index.es.js",
      "require": "./lib/content/index.umd.js"
    }
  },
  "scripts": {
    "build": "node scripts/build.mjs && npm run build:types",
    "build:core": "npm run build -p core",
    "build:client": "npm run build -p client",
    "build1": "vite build --mode development && npm run build:types",
    "build:types": "tsc -p ./tsconfig.json --noEmit false --declaration --emitDeclarationOnly --declarationDir ./lib",
    "prepublish": "npm run build",
    "postpublish": "rm -rf ./lib",
    "test": "jest",
    "lint": "eslint --ext .ts",
    "lint:fix": "eslint --fix --ext .ts"
  },
  "author": "feyond",
  "homepage": "https://github.com/feyond/chrome-messaging",
  "license": "ISC",
  "keywords": [
    "chrome",
    "messaging",
    "chrome messaging"
  ],
  "bugs": {
    "url": "https://github.com/feyond/chrome-messaging/issues",
    "email": "cfyond@gmail.com"
  },
  "repository": {
    "url": "https://github.com/feyond/chrome-messaging.git",
    "type": "git"
  },
  "peerDependencies": {
    "@feyond/console-logging": "^1.1.4"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.4",
    "@types/chrome": "^0.0.193",
    "@types/jest": "^27.5.2",
    "@types/node": "^18.6.4",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest-chrome": "^0.7.2",
    "minimist": "^1.2.6",
    "prettier": "^2.7.1",
    "ts-jest": "^27.1.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "vite": "^3.0.6"
  }
}
