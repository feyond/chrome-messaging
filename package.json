{
  "name": "@feyond/chrome-messaging",
  "version": "0.0.3",
  "description": "Chrome Extension Messaging Wrapper Library",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rimraf ./lib && npm run build:types && npm run build:js",
    "build:js": "babel src --out-dir ./lib --ignore \"src/*.d.ts\" --extensions \".ts\"",
    "build:types": "tsc -p tsconfig.prod.json --noEmit false --declaration --emitDeclarationOnly --declarationDir ./lib",
    "prepublish": "npm run test && npm run build",
    "postpublish": "rimraf ./lib",
    "test": "jest",
    "lint": "eslint --ext .ts",
    "lint:fix": "eslint --fix --ext .ts",
    "prepare": "ts-patch install -s"
  },
  "author": "feyond",
  "homepage": "https://github.com/feyond/chrome-messaging",
  "license": "ISC",
  "keywords": [
    "chrome",
    "messaging",
    "chrome messaging"
  ],
  "bugs": {
    "url": "https://github.com/feyond/chrome-messaging/issues",
    "email": "cfyond@gmail.com"
  },
  "repository": {
    "url": "https://github.com/feyond/chrome-messaging.git",
    "type": "git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.10",
    "@babel/plugin-transform-runtime": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/register": "^7.18.9",
    "@types/chrome": "^0.0.193",
    "@types/jest": "^27.5.2",
    "@types/node": "^18.7.6",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "babel-jest": "^27.5.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^27.5.1",
    "jest-chrome": "^0.7.2",
    "jest-environment-jsdom": "^27.5.1",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "ts-patch": "^2.0.2",
    "typescript": "^4.7.4",
    "typescript-transform-paths": "^3.3.1"
  },
  "dependencies": {
    "@babel/runtime": "^7.18.9",
    "@feyond/console-logging": "^1.2.3",
    "core-js": "^3.24.1"
  }
}
