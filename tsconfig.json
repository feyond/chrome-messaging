{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "declaration": false,
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "typeRoots": ["./node_modules/@types", "./@typings"],
    "baseUrl": "./src",
    "paths": {
      "@core": ["core/index.ts"],
      "@client": ["client/index.ts"],
      "@background": ["background/index.ts"],
      "@content": ["content/index.ts"]
    }
  },
  "ts-node": {
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "__tests__",
    "lib"
  ]
}